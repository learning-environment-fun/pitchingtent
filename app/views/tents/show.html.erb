                          <input type="text" name="end date">
                          <br>
                          <br>
                                                    <br>
                          <br>
                          <input type="submit" value="Book Now">
                        </form>
                    </div>
                  </div>
                </div>

            </div>
        </section>
        <section class="booking_tent">
            <div class="container">
                <div class="show_top_container">

                    <div>



                    </div>
                </div>
            </div>
        </section>
