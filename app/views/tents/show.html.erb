                  <div class="header_tent_content">
                    <div>
                      <div>
                      <h1>
                          <%= @tent.title %>
                      </h1>
                      <p>
                          <%= @tent.description %>
                      </p>
                      <h5>Host: <%= @tent.user.name %></h5>
                      <h5>Capacity: <%= @tent.capacity %></h3>
                      <h5>â‚¬<%= @tent.price %>/night</h3>
                      </div>
                      <br>
                      <br>
