<% is_in_header ||= false %>
<% class_string = is_in_header ? ' is-in-header' : ' is-light' %>
<div class="search-bar<%= class_string %>">
    <span id="search-bar-logo-and-drop-down">
        <%= link_to root_path do %>
        <%= inline_svg "tepee.svg", class: 'logo-svg' %>
        <% end %>
        <span id='search-bar-dropdown-arrow'>
            <i class="fas fa-chevron-down"></i>
            <i class="fas fa-chevron-up is-invisible"></i>
        </span>
    </span>
    <span id="search-bar-text-field">
        <span id="search-bar-icon"><i class="fas fa-search"></i></span>
        <form action="" class="search-form">
            <input type="text" default="Scope out a tent" value="Scope out a tent" name="query">
        </form>
    </span>
    <!-- Other option: btn-custom-outline blue -->
    <span id="search-bar-buttons">
        <span class="avatar-circle">
            <%= image_tag 'headshot.jpg' %>
        </span>
    </span>
</div>

<% class_string = is_in_header ? 'header-present' : '' %>
<div id="user-menu" class="<%= class_string %>">
    <ul>
        <% if current_user %>
        <%= link_to user_path do %>
        <li><i class="fas fa-user-circle"></i>View Profile</li>
        <% end %>

        <%= link_to edit_user_registration_path do %>
        <li><i class="fas fa-cog"></i>Edit Account</li>
        <% end %>

        <%= link_to destroy_user_session_path, method: :delete do %>
        <li><i class="fas fa-sign-out-alt"></i>Log Out</li>
        <% end %>
        <% else %>
        <%= link_to new_user_registration_path do %>
        <li><i class="fas fa-user-circle"></i>Create Account</li>
        <% end %>

        <%= link_to new_user_session_path do %>
        <li><i class="fas fa-sign-out-alt"></i>Log In</li>
        <% end %>
        <% end %>
    </ul>
</div>