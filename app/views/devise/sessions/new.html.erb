<%= render 'components/search_bar' %>

<div id="content-wrapper" class="background-intelligent-cover is-blurred is-fixed-to-viewport"
    data-background-image="<%= image_path('background_lake_tent_edited.jpg') %>">
    <div class="content-shadow">
        <!--    <div class="content-create-tent">-->
        <div id="content-container">
            <div class="login">
                <div class="login-form">
                    <h2>Log in</h2>
                    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="form-inputs">
                        <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
                        <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
                        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                    </div>
                    <div class="form-actions">
                        <%= f.button :submit, "Log in" %>
                    </div>
                    <% end %>
                    <%= render "devise/shared/links" %>
                </div>
            </div>
        </div>
    </div>
</div>
<%= render partial:'/components/footer', locals: { is_above: true } %>